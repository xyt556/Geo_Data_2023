<Map background-color="#efefef" srs="+proj=longlat +ellps=WGS84 +datum=WGS84 +no_defs">
    <Style name="My Style">
        <Rule>
            <PolygonSymbolizer fill="#ffffff"/>
            <LineSymbolizer stroke="rgb(50%,50%,50%)" stroke-width="1" stroke-dasharray="8,20"/>
            <TextSymbolizer face-name="DejaVu Sans Book" size="10" fill="black" halo-fill= "red" halo-radius="2" placement="point" allow-overlap="false">[NAME]</TextSymbolizer>

        </Rule>
    </Style>
    <Layer name="world" srs="+proj=longlat +ellps=WGS84 +datum=WGS84 +no_defs">
        <StyleName>My Style</StyleName>
        <Datasource>
            <Parameter name="type">shape</Parameter>
            <Parameter name="file">GSHHS_c.shp</Parameter>
        </Datasource>
    </Layer>
</Map>